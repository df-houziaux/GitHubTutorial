<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GitHubTutorial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Acceuil.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Acceuil" asp-action="Index">GitHubTutorial</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Acceuil" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Acceuil" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 pb-3">
        @RenderBody()
    </main>

    <div class="footer">
        <div class="container">
            <div class="footer-row">
                <div class="footer-col logo-col">
                    <img src="~/images/LogoProfessionnel1.jpg" alt="Logo Houziaux David" class="logo-footer">
                </div>
                <div class="footer-col text-col">
                    <p class="footer-text">&copy; 2025 - Houziaux David | Développement & Création Web</p>
                    <p class="footer-subtext">Propulsé par passion & innovation 🚀</p>
                </div>
                <div class="footer-col contact-col">
                    <div class="contact-info">
                        <p class="contact-item email">
                            📧 <a href="mailto:df.houziaux@gmail.com" class="contact-link">df.houziaux@gmail.com</a>
                        </p>
                        <p class="contact-item location">📍 <span class="contact-location">Basé en France</span></p>
                    </div>
                </div>
                <div class="footer-col social-col">
                    <div class="social-links">
                        <a href="https://www.linkedin.com/in/david-houziaux-a6a33a298/" target="_blank" class="social-icon linkedin">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/8/81/LinkedIn_icon.svg" alt="LinkedIn">
                        </a>
                        <a href="https://github.com/df-houziaux" target="_blank" class="social-icon github">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/9/91/Octicons-mark-github.svg" alt="GitHub" style="filter: invert(1);">
                        </a>
                    </div>
                    <div class="contact-button">
                        <a href="@Url.Action("Contact", "Acceuil")" class="btn-contact">Me Contacter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Acceuil.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
